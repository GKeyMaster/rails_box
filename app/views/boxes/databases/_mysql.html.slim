.row
  .col-lg-2
    = render 'boxes/databases/sql_orms', db: 'mysql'
  .col-lg-3
    .form-group
      label for='mysql_db_name' Database Name
      input.form-control id='mysql_db_name' name='box[mysql_db_name]' type='text' ng-model='configuration.mysql_db_name' ng-disabled='!isActive("mysql")'
  .col-lg-3
    .form-group
      label for='mysql_db_user' Database User
      input.form-control id='mysql_db_user' name='box[mysql_db_user]' type='text' ng-model='configuration.mysql_db_user' ng-disabled='!isActive("mysql")'
  .col-lg-3
    .form-group
      label for='mysql_db_password' Database Password
      input.form-control id='mysql_db_password' name='box[mysql_db_password]' type='text' placeholder='optional' ng-model='configuration.mysql_db_password' ng-disabled='!isActive("mysql")'
= render 'boxes/databases/sql_config'
